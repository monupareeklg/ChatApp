<%- include('partials/header') %>
<div class="register-photo">
    <div class="form-container">
        <div class="image-holder"></div>
        <form method="POST">
            <h2><strong>Create</strong> an account.</h2>
            <div class="form-group"><input class="form-control" type="email" name="username" placeholder="Email" required></div>
            <div class="form-group"><input class="form-control" type="password" name="password" placeholder="Password"></div>
            <div class="form-group"><input class="form-control" type="password" name="password-repeat" placeholder="Password-repeat"></div>
            <div class="form-group">
                <div class="form-check"><label class="form-check-lable"><input class="form-check-input" type="checkbox" name="checkbox">Stay login</label></div>
            </div>
            <div class="form-group"><button class="btn btn-success btn-block" type="submit">Login</button></div><a href="/register" class="already">If you dont have account? Sign up here.</a>
        </form>
    </div>
</div>


